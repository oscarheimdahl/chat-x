* 
    margin: 0
    padding: 0
    font-family: sans-serif

.app 
    margin: 0 auto
    height: calc(100vh - 20px)
    padding: 10px
    max-width 1000px
    display: flex
    flex-direction: column
    justify-content: flex-end

    .top-row
        display flex
        justify-content: space-between
        padding: 0 0 10px 0

        *
            font-size: 20px
            font-weight: 200

        .username-field
            display inline
            width: 40%
            outline: none
            border: none
            text-align: right